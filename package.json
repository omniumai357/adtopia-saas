{
  "name": "adtopia-saas",
  "version": "1.0.0",
  "description": "AdTopia - AI-Powered Ad Card Generator",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "vercel --prod",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "diagnose:app": "node qa/app-health-monitor.mjs",
    "test:app-health": "node qa/app-health-monitor.mjs --route=/app --timeout=5000",
    "ci:health-check": "npm run test:app-health && echo 'APP_HEALTH=PASS' >> $GITHUB_ENV",
    "test:e2e": "vitest run --config vitest.config.ts",
    "test:e2e:app": "npm run test:e2e -- --grep '/app'",
    "audit:full": "node scripts/audit-runner.mjs --manifest=qa/orchestration/audit_manifest.json",
    "audit:critical": "node scripts/audit-runner.mjs --priority=CRITICAL --manifest=qa/orchestration/audit_manifest.json",
    "audit:revenue": "node scripts/audit-runner.mjs --tasks=revenue_pipeline_health,agency_partner_system_health --manifest=qa/orchestration/audit_manifest.json",
    "audit:security": "node scripts/audit-runner.mjs --tasks=security_vulnerability_scan --manifest=qa/orchestration/audit_manifest.json"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@next/bundle-analyzer": "^15.5.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@stripe/stripe-js": "^2.0.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "next": "^14.0.0",
    "node-statsd": "^0.1.1",
    "openai": "^6.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "recharts": "^3.2.1",
    "redis": "^5.8.3",
    "resend": "^3.0.0",
    "stripe": "^14.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^30.2.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "saas",
    "ai",
    "ad-cards",
    "qr-codes",
    "marketing"
  ],
  "author": "AdTopia Team",
  "license": "MIT"
}
